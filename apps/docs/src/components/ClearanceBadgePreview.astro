---
// ClearanceBadgePreview.astro - Static preview of ClearanceBadge component
---

<div class="clearance-preview not-content">
  <div class="preview-section">
    <div class="preview-label">Clearance Levels</div>
    <div class="preview-row">
      <div class="clearance clearance-public">
        <span class="clearance-icon">○</span>
        <span class="clearance-text">PUBLIC</span>
      </div>
      <div class="clearance clearance-internal">
        <span class="clearance-icon">◐</span>
        <span class="clearance-text">INTERNAL</span>
      </div>
      <div class="clearance clearance-confidential">
        <span class="clearance-icon">◑</span>
        <span class="clearance-text">CONFIDENTIAL</span>
      </div>
      <div class="clearance clearance-secret">
        <span class="clearance-icon">●</span>
        <span class="clearance-text">SECRET</span>
      </div>
      <div class="clearance clearance-oracle">
        <span class="clearance-icon">◈</span>
        <span class="clearance-text">ORACLE</span>
      </div>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Sizes</div>
    <div class="preview-row">
      <div class="clearance clearance-internal clearance-sm">
        <span class="clearance-icon">◐</span>
        <span class="clearance-text">SM</span>
      </div>
      <div class="clearance clearance-internal clearance-md">
        <span class="clearance-icon">◐</span>
        <span class="clearance-text">MD</span>
      </div>
      <div class="clearance clearance-internal clearance-lg">
        <span class="clearance-icon">◐</span>
        <span class="clearance-text">LG</span>
      </div>
    </div>
  </div>
</div>

<style>
  .clearance-preview {
    background: #020617;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .preview-section {
    margin-bottom: 1.5rem;
  }

  .preview-section:last-child {
    margin-bottom: 0;
  }

  .preview-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  .clearance {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-family: 'JetBrains Mono', monospace;
    font-weight: 500;
    letter-spacing: 0.05em;
    border-radius: 2px;
  }

  .clearance-sm { font-size: 0.625rem; padding: 0.25rem 0.5rem; }
  .clearance-md { font-size: 0.7rem; padding: 0.375rem 0.625rem; }
  .clearance-lg { font-size: 0.8rem; padding: 0.5rem 0.75rem; }
  .clearance:not(.clearance-sm):not(.clearance-lg) { font-size: 0.7rem; padding: 0.375rem 0.625rem; }

  .clearance-public {
    background: rgba(100, 116, 139, 0.1);
    border: 1px solid rgba(100, 116, 139, 0.3);
    color: #64748b;
  }

  .clearance-internal {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    color: #3b82f6;
  }

  .clearance-confidential {
    background: rgba(245, 158, 11, 0.1);
    border: 1px solid rgba(245, 158, 11, 0.3);
    color: #f59e0b;
  }

  .clearance-secret {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    color: #ef4444;
  }

  .clearance-oracle {
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    color: #8b5cf6;
    box-shadow: 0 0 10px rgba(139, 92, 246, 0.2);
  }

  .clearance-icon {
    font-size: 0.875em;
  }
</style>
