---
// TooltipPreview.astro - Static preview of Tooltip component
---

<div class="tooltip-preview not-content">
  <div class="preview-section">
    <div class="preview-label">Positions</div>
    <div class="preview-grid">
      <div class="tooltip-demo">
        <div class="tooltip tooltip-top">Tooltip text</div>
        <button class="trigger-btn">Top</button>
      </div>
      <div class="tooltip-demo">
        <button class="trigger-btn">Bottom</button>
        <div class="tooltip tooltip-bottom">Tooltip text</div>
      </div>
      <div class="tooltip-demo tooltip-demo-horizontal">
        <div class="tooltip tooltip-left">Tooltip</div>
        <button class="trigger-btn">Left</button>
      </div>
      <div class="tooltip-demo tooltip-demo-horizontal">
        <button class="trigger-btn">Right</button>
        <div class="tooltip tooltip-right">Tooltip</div>
      </div>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Variants</div>
    <div class="preview-row">
      <div class="tooltip-demo">
        <div class="tooltip tooltip-top tooltip-default">Default tooltip</div>
        <button class="trigger-btn">Default</button>
      </div>
      <div class="tooltip-demo">
        <div class="tooltip tooltip-top tooltip-oracle">Oracle tooltip</div>
        <button class="trigger-btn trigger-oracle">Oracle</button>
      </div>
    </div>
  </div>
</div>

<style>
  .tooltip-preview {
    background: #020617;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .preview-section {
    margin-bottom: 1.5rem;
  }

  .preview-section:last-child {
    margin-bottom: 0;
  }

  .preview-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    max-width: 300px;
  }

  .preview-row {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .tooltip-demo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .tooltip-demo-horizontal {
    flex-direction: row;
  }

  .trigger-btn {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 4px;
    color: #e2e8f0;
    cursor: pointer;
  }

  .trigger-oracle {
    background: rgba(139, 92, 246, 0.1);
    border-color: rgba(139, 92, 246, 0.3);
    color: #8b5cf6;
  }

  .tooltip {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.75rem;
    padding: 0.375rem 0.625rem;
    border-radius: 4px;
    white-space: nowrap;
    position: relative;
  }

  .tooltip-default {
    background: #1e293b;
    color: #e2e8f0;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .tooltip-oracle {
    background: rgba(139, 92, 246, 0.2);
    color: #c4b5fd;
    border: 1px solid rgba(139, 92, 246, 0.3);
  }

  .tooltip-top::after,
  .tooltip-bottom::after {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    border: 5px solid transparent;
  }

  .tooltip-top::after {
    bottom: -10px;
    border-top-color: #1e293b;
  }

  .tooltip-bottom::after {
    top: -10px;
    border-bottom-color: #1e293b;
  }

  .tooltip-left::after,
  .tooltip-right::after {
    content: '';
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    border: 5px solid transparent;
  }

  .tooltip-left::after {
    right: -10px;
    border-left-color: #1e293b;
  }

  .tooltip-right::after {
    left: -10px;
    border-right-color: #1e293b;
  }
</style>
