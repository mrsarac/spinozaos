---
// MicroInteractionsPreview.astro - Interactive micro-interactions showcase
---

<div class="micro-preview not-content">
  <div class="preview-section">
    <div class="preview-label">Button Interactions</div>
    <div class="preview-row">
      <button class="btn-micro btn-scale">Scale on Hover</button>
      <button class="btn-micro btn-lift">Lift Effect</button>
      <button class="btn-micro btn-glow">Glow Pulse</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Loading States</div>
    <div class="preview-row">
      <button class="btn-micro btn-loading">
        <span class="spinner"></span>
        Loading...
      </button>
      <div class="pulse-dot"></div>
      <div class="typing-dots">
        <span></span><span></span><span></span>
      </div>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Scan Line Effect</div>
    <div class="scan-container">
      <div class="scan-content">CLASSIFIED DATA</div>
      <div class="scan-line"></div>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Confidence Slider</div>
    <div class="slider-container">
      <input type="range" class="confidence-slider" min="0" max="100" value="75" id="confidence-input" />
      <div class="slider-track">
        <div class="slider-fill" id="slider-fill" style="width: 75%"></div>
      </div>
      <span class="slider-value" id="slider-value">75%</span>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Focus Ring Animation</div>
    <div class="preview-row">
      <input type="text" class="focus-input" placeholder="Focus me..." />
      <button class="focus-btn">Tab to me</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Stagger Animation (Click)</div>
    <div class="stagger-container" id="stagger-demo">
      <div class="stagger-item">Item 1</div>
      <div class="stagger-item">Item 2</div>
      <div class="stagger-item">Item 3</div>
      <div class="stagger-item">Item 4</div>
    </div>
    <button class="replay-btn" onclick="replayStagger()">Replay</button>
  </div>
</div>

<style>
  .micro-preview {
    background: #020617;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .preview-section {
    margin-bottom: 2rem;
  }

  .preview-section:last-child {
    margin-bottom: 0;
  }

  .preview-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 1rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
  }

  /* Button Micro-interactions */
  .btn-micro {
    padding: 0.625rem 1.25rem;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 500;
    border: none;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .btn-scale {
    background: #fbbf24;
    color: #020617;
  }

  .btn-scale:hover {
    transform: scale(1.05);
  }

  .btn-scale:active {
    transform: scale(0.98);
  }

  .btn-lift {
    background: transparent;
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.5);
  }

  .btn-lift:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(251, 191, 36, 0.2);
    border-color: #fbbf24;
  }

  .btn-glow {
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    color: white;
    position: relative;
  }

  .btn-glow::before {
    content: '';
    position: absolute;
    inset: 0;
    background: inherit;
    filter: blur(12px);
    opacity: 0;
    z-index: -1;
    transition: opacity 0.3s ease;
  }

  .btn-glow:hover::before {
    opacity: 0.6;
  }

  /* Loading States */
  .btn-loading {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    color: #94a3b8;
    cursor: wait;
  }

  .spinner {
    width: 14px;
    height: 14px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-top-color: #fbbf24;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .pulse-dot {
    width: 12px;
    height: 12px;
    background: #22c55e;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.2); opacity: 0.7; }
  }

  .typing-dots {
    display: flex;
    gap: 4px;
  }

  .typing-dots span {
    width: 8px;
    height: 8px;
    background: #64748b;
    border-radius: 50%;
    animation: typing 1.4s ease-in-out infinite;
  }

  .typing-dots span:nth-child(2) { animation-delay: 0.2s; }
  .typing-dots span:nth-child(3) { animation-delay: 0.4s; }

  @keyframes typing {
    0%, 60%, 100% { transform: translateY(0); }
    30% { transform: translateY(-8px); }
  }

  /* Scan Line */
  .scan-container {
    position: relative;
    background: rgba(0, 0, 0, 0.5);
    border: 1px solid rgba(251, 191, 36, 0.2);
    padding: 2rem;
    overflow: hidden;
  }

  .scan-content {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    color: #fbbf24;
    text-align: center;
    letter-spacing: 0.2em;
  }

  .scan-line {
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #fbbf24, transparent);
    animation: scan 2s linear infinite;
  }

  @keyframes scan {
    0% { top: 0; opacity: 0; }
    10% { opacity: 1; }
    90% { opacity: 1; }
    100% { top: 100%; opacity: 0; }
  }

  /* Confidence Slider */
  .slider-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: 1rem;
    max-width: 300px;
  }

  .confidence-slider {
    position: absolute;
    width: calc(100% - 50px);
    height: 100%;
    opacity: 0;
    cursor: pointer;
    z-index: 10;
  }

  .slider-track {
    flex: 1;
    height: 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    overflow: hidden;
  }

  .slider-fill {
    height: 100%;
    background: linear-gradient(90deg, #ef4444, #f59e0b, #22c55e);
    border-radius: 4px;
    transition: width 0.1s ease;
  }

  .slider-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    font-weight: 600;
    color: #22c55e;
    min-width: 40px;
    text-align: right;
  }

  /* Focus Ring */
  .focus-input {
    padding: 0.625rem 1rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.875rem;
    outline: none;
    transition: all 0.2s ease;
  }

  .focus-input:focus {
    border-color: #fbbf24;
    box-shadow: 0 0 0 3px rgba(251, 191, 36, 0.2);
  }

  .focus-btn {
    padding: 0.625rem 1rem;
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #e2e8f0;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.875rem;
    cursor: pointer;
    outline: none;
    transition: all 0.2s ease;
  }

  .focus-btn:focus {
    border-color: #8b5cf6;
    box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.3);
  }

  /* Stagger Animation */
  .stagger-container {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .stagger-item {
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #e2e8f0;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.8rem;
    opacity: 0;
    transform: translateY(20px);
    animation: staggerIn 0.4s ease forwards;
  }

  .stagger-item:nth-child(1) { animation-delay: 0s; }
  .stagger-item:nth-child(2) { animation-delay: 0.1s; }
  .stagger-item:nth-child(3) { animation-delay: 0.2s; }
  .stagger-item:nth-child(4) { animation-delay: 0.3s; }

  @keyframes staggerIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .replay-btn {
    padding: 0.375rem 0.75rem;
    background: transparent;
    border: 1px solid rgba(251, 191, 36, 0.3);
    color: #fbbf24;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .replay-btn:hover {
    background: rgba(251, 191, 36, 0.1);
  }
</style>

<script is:inline>
  // Confidence slider
  const slider = document.getElementById('confidence-input');
  const fill = document.getElementById('slider-fill');
  const value = document.getElementById('slider-value');

  if (slider) {
    slider.addEventListener('input', (e) => {
      const val = e.target.value;
      fill.style.width = val + '%';
      value.textContent = val + '%';

      // Color based on value
      if (val >= 70) {
        value.style.color = '#22c55e';
      } else if (val >= 40) {
        value.style.color = '#f59e0b';
      } else {
        value.style.color = '#ef4444';
      }
    });
  }

  // Stagger replay
  function replayStagger() {
    const items = document.querySelectorAll('.stagger-item');
    items.forEach(item => {
      item.style.animation = 'none';
      item.offsetHeight; // Trigger reflow
      item.style.animation = null;
    });
  }
</script>
