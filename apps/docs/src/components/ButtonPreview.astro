---
// ButtonPreview.astro - Interactive preview of Button variants with code
---

<div class="button-preview not-content">
  <div class="preview-section">
    <div class="preview-label">Variants</div>
    <div class="preview-row">
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-ghost">Ghost</button>
      <button class="btn btn-oracle">Oracle</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Sizes</div>
    <div class="preview-row">
      <button class="btn btn-primary btn-sm">Small</button>
      <button class="btn btn-primary btn-md">Medium</button>
      <button class="btn btn-primary btn-lg">Large</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">States</div>
    <div class="preview-row">
      <button class="btn btn-primary">Default</button>
      <button class="btn btn-primary btn-loading">
        <span class="spinner"></span>
        Loading
      </button>
      <button class="btn btn-primary btn-disabled" disabled>Disabled</button>
    </div>
  </div>

  <div class="code-section">
    <div class="code-header">
      <span class="code-lang">tsx</span>
      <button class="copy-btn" id="btn-copy">
        <svg class="copy-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <span>Copy</span>
      </button>
    </div>
    <pre class="code-block"><code>{`import { Button } from '@spinozaos/react';

<Button variant="primary">Primary</Button>
<Button variant="secondary">Secondary</Button>
<Button variant="ghost">Ghost</Button>
<Button variant="oracle">Oracle</Button>`}</code></pre>
  </div>
</div>

<style>
  .button-preview {
    background: #020617;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .preview-section {
    margin-bottom: 1.5rem;
  }

  .preview-section:last-child {
    margin-bottom: 0;
  }

  .preview-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  /* Base Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 500;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    outline: none;
  }

  /* Sizes */
  .btn-sm {
    height: 36px;
    padding: 0 12px;
    font-size: 0.875rem;
  }

  .btn-md {
    height: 40px;
    padding: 0 16px;
    font-size: 0.875rem;
  }

  .btn-lg {
    height: 48px;
    padding: 0 24px;
    font-size: 1rem;
  }

  .btn:not(.btn-sm):not(.btn-lg) {
    height: 40px;
    padding: 0 16px;
    font-size: 0.875rem;
  }

  /* Primary Variant */
  .btn-primary {
    background: #fbbf24;
    color: #020617;
  }

  .btn-primary:hover,
  .btn-primary.btn-hover {
    background: #f59e0b;
    transform: scale(1.02);
  }

  /* Secondary Variant */
  .btn-secondary {
    background: transparent;
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.5);
  }

  .btn-secondary:hover {
    background: rgba(251, 191, 36, 0.1);
    border-color: #fbbf24;
  }

  /* Ghost Variant */
  .btn-ghost {
    background: transparent;
    color: #94a3b8;
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
  }

  /* Oracle Variant */
  .btn-oracle {
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    color: #ffffff;
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
  }

  .btn-oracle:hover {
    box-shadow: 0 0 30px rgba(139, 92, 246, 0.5);
    transform: scale(1.02);
  }

  /* Disabled State */
  .btn-disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Loading State */
  .btn-loading {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    cursor: wait;
  }

  .spinner {
    width: 14px;
    height: 14px;
    border: 2px solid rgba(2, 6, 23, 0.3);
    border-top-color: #020617;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Code Section */
  .code-section {
    margin-top: 1.5rem;
    background: #0a0a0f;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    overflow: hidden;
  }

  .code-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.03);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .code-lang {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
  }

  .copy-btn {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.375rem 0.75rem;
    background: rgba(251, 191, 36, 0.1);
    border: 1px solid rgba(251, 191, 36, 0.3);
    border-radius: 4px;
    color: #fbbf24;
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.7rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .copy-btn:hover {
    background: rgba(251, 191, 36, 0.2);
    border-color: #fbbf24;
  }

  .copy-btn.copied {
    background: rgba(34, 197, 94, 0.1);
    border-color: rgba(34, 197, 94, 0.5);
    color: #22c55e;
  }

  .copy-icon {
    width: 14px;
    height: 14px;
  }

  .code-block {
    margin: 0;
    padding: 1rem;
    overflow-x: auto;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    line-height: 1.6;
    color: #e2e8f0;
    background: transparent;
  }

  .code-block code {
    background: none;
    padding: 0;
  }
</style>

<script is:inline>
  document.getElementById('btn-copy')?.addEventListener('click', function() {
    const code = this.closest('.code-section').querySelector('code').textContent;
    navigator.clipboard.writeText(code).then(() => {
      this.classList.add('copied');
      this.querySelector('span').textContent = 'Copied!';
      setTimeout(() => {
        this.classList.remove('copied');
        this.querySelector('span').textContent = 'Copy';
      }, 2000);
    });
  });
</script>
