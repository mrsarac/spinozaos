---
// ButtonPreview.astro - Static preview of Button variants
---

<div class="button-preview not-content">
  <div class="preview-section">
    <div class="preview-label">Variants</div>
    <div class="preview-row">
      <button class="btn btn-primary">Primary</button>
      <button class="btn btn-secondary">Secondary</button>
      <button class="btn btn-ghost">Ghost</button>
      <button class="btn btn-oracle">Oracle</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">Sizes</div>
    <div class="preview-row">
      <button class="btn btn-primary btn-sm">Small</button>
      <button class="btn btn-primary btn-md">Medium</button>
      <button class="btn btn-primary btn-lg">Large</button>
    </div>
  </div>

  <div class="preview-section">
    <div class="preview-label">States</div>
    <div class="preview-row">
      <button class="btn btn-primary">Default</button>
      <button class="btn btn-primary btn-hover">Hover</button>
      <button class="btn btn-primary btn-disabled" disabled>Disabled</button>
    </div>
  </div>
</div>

<style>
  .button-preview {
    background: #020617;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .preview-section {
    margin-bottom: 1.5rem;
  }

  .preview-section:last-child {
    margin-bottom: 0;
  }

  .preview-label {
    font-size: 0.7rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #64748b;
    margin-bottom: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
  }

  .preview-row {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    align-items: center;
  }

  /* Base Button Styles */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: 'Inter', system-ui, sans-serif;
    font-weight: 500;
    border-radius: 0;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
    outline: none;
  }

  /* Sizes */
  .btn-sm {
    height: 36px;
    padding: 0 12px;
    font-size: 0.875rem;
  }

  .btn-md {
    height: 40px;
    padding: 0 16px;
    font-size: 0.875rem;
  }

  .btn-lg {
    height: 48px;
    padding: 0 24px;
    font-size: 1rem;
  }

  .btn:not(.btn-sm):not(.btn-lg) {
    height: 40px;
    padding: 0 16px;
    font-size: 0.875rem;
  }

  /* Primary Variant */
  .btn-primary {
    background: #fbbf24;
    color: #020617;
  }

  .btn-primary:hover,
  .btn-primary.btn-hover {
    background: #f59e0b;
    transform: scale(1.02);
  }

  /* Secondary Variant */
  .btn-secondary {
    background: transparent;
    color: #fbbf24;
    border: 1px solid rgba(251, 191, 36, 0.5);
  }

  .btn-secondary:hover {
    background: rgba(251, 191, 36, 0.1);
    border-color: #fbbf24;
  }

  /* Ghost Variant */
  .btn-ghost {
    background: transparent;
    color: #94a3b8;
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.05);
    color: #ffffff;
  }

  /* Oracle Variant */
  .btn-oracle {
    background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
    color: #ffffff;
    box-shadow: 0 0 20px rgba(139, 92, 246, 0.3);
  }

  .btn-oracle:hover {
    box-shadow: 0 0 30px rgba(139, 92, 246, 0.5);
    transform: scale(1.02);
  }

  /* Disabled State */
  .btn-disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }
</style>
