---
// ComponentPreview.astro - Visual preview for components
interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<div class="component-preview not-content">
  {title && <div class="preview-title">{title}</div>}
  <div class="preview-container">
    <slot />
  </div>
  {description && <div class="preview-description">{description}</div>}
</div>

<style>
  .component-preview {
    margin: 1.5rem 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: hidden;
    background: #020617;
  }

  .preview-title {
    padding: 0.75rem 1rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #94a3b8;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.02);
  }

  .preview-container {
    padding: 2rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    min-height: 80px;
  }

  .preview-description {
    padding: 0.75rem 1rem;
    font-size: 0.8rem;
    color: #64748b;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.02);
  }
</style>
